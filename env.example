# ============================================================================
# Spotify API Credentials (Required)
# ============================================================================
# Get these from https://developer.spotify.com/dashboard
# Required for all functionality
SPOTIPY_CLIENT_ID=your_client_id_here
SPOTIPY_CLIENT_SECRET=your_client_secret_here
SPOTIPY_REDIRECT_URI=http://127.0.0.1:8888/callback

# Optional: For automated/local runs without browser
# Get via: python src/scripts/utils/get_token.py

# ============================================================================
# PLAYLIST AESTHETICS & ORGANIZATION
# ============================================================================

# Enable rich playlist descriptions with statistics (track count, duration, etc.)
ENABLE_RICH_PLAYLIST_DESCRIPTIONS=true

# Daylist-style mood tags in playlist descriptions (Chill, Energetic, Focus, etc.)
# Inferred from track genres; optional neural model (e.g. Music2Emo) can be wired in
ENABLE_MOOD_TAGS=true
# MOOD_MAX_TAGS=5

# Run health check after sync (checks for empty playlists, duplicates, etc.)
ENABLE_HEALTH_CHECK=false

# Generate insights report after sync (listening patterns, recommendations, etc.)
ENABLE_INSIGHTS_REPORT=false

# Generate genre discovery report (clusters, hybrids, emerging genres)
ENABLE_GENRE_DISCOVERY=false
SPOTIPY_REFRESH_TOKEN=your_refresh_token_here

# ============================================================================
# Data Directory (Optional)
# ============================================================================
# By default, data (parquet files, cache, backups) is stored under SPOTIM8/data.
# Override with an absolute path if you want data elsewhere:
# SPOTIM8_DATA_DIR=/path/to/your/data
# DATA_DIR=/path/to/your/data

# ============================================================================
# Playlist Configuration (Optional)
# ============================================================================
# Customize playlist naming - most users only need these two
PLAYLIST_OWNER_NAME=AJ
PLAYLIST_PREFIX=Finds

# ============================================================================
# Playlist Settings (Optional - Advanced)
# ============================================================================
# Enable/disable playlist types (default: all enabled)
# PLAYLIST_ENABLE_MONTHLY=true
# PLAYLIST_ENABLE_MOST_PLAYED=true
# PLAYLIST_ENABLE_DISCOVERY=true

# Keep last N months as monthly playlists (default: 3)
# KEEP_MONTHLY_MONTHS=3

# ============================================================================
# Email Notifications (Optional)
# ============================================================================
# Get email notifications after each sync run
# EMAIL_ENABLED=false
# EMAIL_SMTP_HOST=smtp.gmail.com
# EMAIL_SMTP_PORT=587
# EMAIL_SMTP_USER=your_email@gmail.com
# EMAIL_SMTP_PASSWORD=your_app_password
# EMAIL_TO=recipient@example.com

# ============================================================================
# Advanced Formatting (Optional - Rarely Changed)
# ============================================================================
# Most users don't need to change these - good defaults provided
# PLAYLIST_DATE_FORMAT=short              # short, medium, long, numeric
# PLAYLIST_SEPARATOR_MONTH=none          # none, space, dash, underscore
# PLAYLIST_SEPARATOR_PREFIX=none         # none, space, dash, underscore
# PLAYLIST_CAPITALIZATION=preserve       # title, upper, lower, preserve

# ============================================================================
# Auto-Sync Configuration (Optional)
# ============================================================================
# Automatically run incremental sync after playlist operations (merge, rename, etc.)
# AUTO_SYNC_AFTER_WRITE=false  # Set to true to enable auto-sync after operations

# ============================================================================
# Deprecated / Advanced Template Customization (Optional)
# ============================================================================
# These are rarely used - only set if you need custom playlist naming
# All templates use sensible defaults
#
# PLAYLIST_PREFIX_MONTHLY=Finds
# PLAYLIST_PREFIX_GENRE_MONTHLY=Finds
# PLAYLIST_PREFIX_YEARLY=Finds
# PLAYLIST_PREFIX_GENRE_MASTER=am
# PLAYLIST_PREFIX_MOST_PLAYED=Top
# PLAYLIST_PREFIX_DISCOVERY=Discovery
#
# PLAYLIST_TEMPLATE_MONTHLY={owner}{prefix}{mon}{year}
# PLAYLIST_TEMPLATE_YEARLY={owner}{prefix}{year}
# PLAYLIST_TEMPLATE_GENRE_MONTHLY={genre}{prefix}{mon}{year}
# PLAYLIST_TEMPLATE_GENRE_YEARLY={genre}{prefix}{year}
# PLAYLIST_TEMPLATE_GENRE_MASTER={owner}{prefix}{genre}
# PLAYLIST_TEMPLATE_MOST_PLAYED={owner}{prefix}{mon}{year}
# PLAYLIST_TEMPLATE_DISCOVERY={owner}{prefix}{mon}{year}
# PLAYLIST_DESCRIPTION_TEMPLATE={description} from {period} (automatically updated)
# DESCRIPTION_TOP_GENRES=5
